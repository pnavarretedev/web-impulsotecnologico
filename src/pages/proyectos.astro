---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/react/Navbar.jsx";
import Footer from "../components/react/Footer.jsx";
import ProjectCard from "../components/react/ProjectCard.jsx";
import ProjectsSection from "../components/react/ProjectsSection.jsx";

// Projects data
const projects = [
  {
    title: "Migración a Office 365 Empresa",
    description:
      "Implementación completa de licenciamiento y migración a Microsoft 365 para empresas. Incluye diagnóstico inicial, configuración de cuentas, correo corporativo, y capacitación básica para equipos. Ideal para organizaciones que buscan seguridad, productividad y colaboración en la nube.",
    image: "images/projects/migracion-365.jpg",
    tech: ["Office 365", "Sharepoint", "Exchange", "EntraID", "Teams"],
    status: "completed",
    link: "",
    github: "",
  },
  {
    title: "API de consulta a SII",
    description:
      "Desarrollo de una API que automatiza la consulta de datos públicos en el Servicio de Impuestos Internos (SII), permitiendo obtener información clave de contribuyentes como razón social, RUT, giros y estado tributario. Ideal para plataformas de facturación, validación de clientes o inteligencia comercial.",
    image: "images/projects/api-sii.jpg",
    tech: ["Node.js", "API Rest", "TypeScript", "SII","Scraping"],
    status: "completed",
    link: "https://sii-src.impulsotecnologico.cl/",
    github: "",
  },
  {
    title: "Mesa de Soporte ITIL",
    description:
      "Sistema de tickets basado en mejores prácticas ITIL. Gestión de incidentes, problemas y cambios con SLA automatizado.",
    image: "images/projects/itil-desk.jpg",
    tech: ["Next.js", "TypeScript", "MongoDB", "Socket.io"],
    status: "in-progress",
    link: "",
    github: "",
  },
  {
    title: "Sistema de Cotizaciones Inteligente",
    description:
      "Plataforma desarrollada en Next.js para la gestión eficiente de cotizaciones. Permite crear, editar y enviar propuestas comerciales, generar archivos PDF personalizados y compartirlos mediante enlaces únicos con código QR. El cliente puede aceptar o rechazar la cotización directamente desde su dispositivo, agilizando el proceso de cierre y mejorando la experiencia de atención.",
    image: "images/projects/cotizaciones.jpg",
    tech: ["Next.js", "React", "react-pdf", "QRCode", "SII", "Banco Central"],
    status: "completed",
    link: "https://cotizaciones.impulsotecnologico.cl/",
    github: "",
  },
  {
    title: "Landing Page optimizada con Astro y SEO",
    description:
      "Diseño y desarrollo de una landing page rápida, moderna y optimizada para buscadores, utilizando Astro como framework principal. La estructura está pensada para mejorar el posicionamiento orgánico (SEO), con carga eficiente, etiquetas semánticas, metadatos personalizados y contenido estratégico. Ideal para campañas, productos o servicios que requieren alto impacto y visibilidad digital.",
    image: "images/projects/landing.jpg",
    tech: ["Astro", "Tailwind", "SEO", "React"],
    status: "completed",
    link: "",
    github: "",
  },
  {
    title: "Asistente Virtual con IA",
    description:
      "Asistente virtual inteligente con procesamiento de lenguaje natural. Respuestas instantáneas 24/7, escalamiento automático a agentes humanos y aprendizaje continuo de interacciones.",
    image: "images/projects/client-portal.jpg",
    tech: ["Next.js", "MongoDB", "Google Gemini API", "Tailwind"],
    status: "coming-soon",
    link: "",
    github: "",
  },
];

// Tech stack logos for the marquee
const techStack = [
  "React",
  "Next.js",
  "TypeScript",
  "Tailwind CSS",
  "Node.js",
  "Express",
  "PostgreSQL",
  "MongoDB",
  "Docker",
  "Vercel",
  "GitHub",
  "Astro",
];
---

<Layout title="Proyectos - Impulso Tecnológico">
  <Navbar client:load />

  <main class="min-h-screen bg-slate-50">
    <!-- Hero Section -->
    <section
      class="relative py-16 lg:py-24 overflow-hidden bg-gradient-to-br from-slate-50 via-cyan-50/30 to-blue-50/40"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <div
            class="inline-flex items-center space-x-2 px-4 py-2 bg-cyan-100 text-cyan-700 rounded-full text-sm font-medium mb-6"
          >
            <span>Portfolio</span>
          </div>
          <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
            Proyectos que
            <span
              class="bg-gradient-to-r from-cyan-600 to-blue-600 bg-clip-text text-transparent"
            >
              {" "}Transforman Negocios
            </span>
          </h1>
          <p class="text-lg text-slate-600 leading-relaxed">
            Soluciones digitales diseñadas para optimizar procesos, mejorar
            eficiencia y generar resultados medibles
          </p>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <ProjectsSection client:load projects={projects} />

    <!-- CTA Section -->
    <section class="py-8  mx-auto bg-gradient-to-br border-slate-200 flex justify-center">
        <div class="mt-20 text-center">
          <div
            class="inline-block p-8 lg:p-12 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 rounded-2xl max-w-3xl"
          >
            <h3 class="text-2xl lg:text-3xl font-bold text-white mb-4">
              ¿Tienes un proyecto en mente?
            </h3>
            <p class="text-slate-300 mb-6 text-lg">
              Conversemos sobre cómo podemos ayudarte a transformar tu idea en
              realidad
            </p>
            <a
              href="/contacto"
              class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 text-white rounded-lg hover:shadow-2xl hover:shadow-cyan-500/50 transition-all font-medium text-lg"
            >
              Iniciar un proyecto
            </a>
          </div>
        </div>
    </section>

    <!-- Tech Stack Section -->
    <section class="py-16 bg-white border-t border-slate-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-slate-900 text-center mb-8">
          Tecnologías que utilizamos
        </h2>
        <div class="flex flex-wrap justify-center gap-4">
          {
            techStack.map((tech) => (
              <div class="px-6 py-3 bg-slate-50 border border-slate-200 rounded-lg text-slate-700 font-medium hover:border-cyan-300 hover:bg-white hover:shadow-lg transition-all">
                {tech}
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .perspective-1000 {
    perspective: 1000px;
  }
</style>
