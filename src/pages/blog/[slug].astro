---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/react/Navbar.jsx";
import Footer from "../../components/react/Footer.jsx";
import ShareButton from "../../components/react/ShareButton.jsx";
import { getCollection } from "astro:content";
import { Calendar, User, ArrowLeft, Share2 } from "lucide-react";
import "../../styles/blog-prose.css";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString("es-ES", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<Layout title={`${entry.data.title} - Blog Impulso Tecnológico`}>
  <Navbar client:load />

  <main class="min-h-screen bg-white">
    <!-- Back Button -->
    <div class="bg-slate-50 border-b border-slate-200">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <a
          href="/blog"
          class="inline-flex items-center space-x-2 text-slate-600 hover:text-cyan-600 transition-colors font-medium"
        >
          <ArrowLeft className="w-4 h-4" />
          <span>Volver al blog</span>
        </a>
      </div>
    </div>

    <!-- Article Header -->
    <article class="py-12 lg:py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Tags -->
        {
          entry.data.tags && entry.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-6">
              {entry.data.tags.map((tag) => (
                <span class="px-3 py-1 bg-cyan-100 text-cyan-700 text-sm font-medium rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          )
        }

        <!-- Title -->
        <h1
          class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6 leading-tight"
        >
          {entry.data.title}
        </h1>

        <!-- Description -->
        <p class="text-xl text-slate-600 mb-8 leading-relaxed">
          {entry.data.description}
        </p>

        <!-- Meta Info -->
        <div
          class="flex flex-wrap items-center gap-6 pb-8 mb-8 border-b border-slate-200"
        >
          <div class="flex items-center space-x-2 text-slate-600">
            <Calendar className="w-5 h-5" />
            <span>{formatDate(entry.data.pubDate)}</span>
          </div>
          <div class="flex items-center space-x-2 text-slate-600">
            <User className="w-5 h-5" />
            <span>{entry.data.author}</span>
          </div>
          <div class="ml-auto">
            <ShareButton
              title={entry.data.title}
              url={Astro.url.href}
              client:load
            />
          </div>
        </div>

        <!-- Featured Image -->
        {
          entry.data.image && (
            <div class="mb-12 rounded-2xl overflow-hidden">
              <img
                src={entry.data.image}
                alt={entry.data.title}
                class="w-full h-auto"
              />
            </div>
          )
        }

        <!-- Article Content -->
        <div class="prose prose-lg prose-slate max-w-none">
          <Content />
        </div>

        <!-- Share Section -->
        <div class="mt-12 pt-8 border-t border-slate-200">
          <div class="flex items-center justify-between">
            <p class="text-slate-600">¿Te resultó útil este artículo?</p>
            <ShareButton
              title={entry.data.title}
              url={Astro.url.href}
              variant="primary"
              client:load
            />
          </div>
        </div>

        <!-- CTA Section -->
        <div
          class="mt-16 p-8 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 rounded-2xl text-center"
        >
          <h3 class="text-2xl font-bold text-white mb-4">
            ¿Listo para transformar tu empresa?
          </h3>
          <p class="text-slate-300 mb-6 max-w-2xl mx-auto">
            Descubre cómo podemos ayudarte a implementar soluciones digitales
            que generen resultados reales.
          </p>
          <a
            href="/contacto"
            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-cyan-500 to-blue-600 text-white rounded-lg hover:shadow-xl hover:shadow-cyan-500/50 transition-all font-medium"
          >
            Agenda una consulta
          </a>
        </div>
      </div>
    </article>
  </main>

  <Footer client:load />
</Layout>
